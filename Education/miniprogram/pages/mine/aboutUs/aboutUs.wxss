

.about {
  margin: 10px;
  position: relative; 
}

.bg {
  width: 100%;
  border-radius: 5px;
  box-shadow: 0 0 5px #5F687E;
}

.logo {
  width: 80px;
  position: absolute; 
  top: 10px;
  right: 20px;
}

.info {
  position: absolute;
  left: 30px;
  bottom: 30px;
  font-size: 16px;
  color: #5F687E;
}

.name {
  font-weight: bold;
}

.desc {
  margin-bottom: 10px;
}